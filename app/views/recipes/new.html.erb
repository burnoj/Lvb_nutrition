<%= simple_form_for(@recipe) do |f| %>
  <%= f.input :name %>
  <%= f.input :description %>
  <%= f.input :instructions %>
  <%= f.input :dietary_info, collection: @types, as: :radio_buttons%>
  <%= f.input :cooking_time%>
  <%= f.input :serves, collection: 1..8 %>
  <%= f.button :submit %>
<% end %>
