<%= render partial: "shared/navbar" %>

<%= image_tag image_url(@recipe.image_url) %>
<h3><%= @recipe.name %></h3>
<p><%= @recipe.description %></p>
<p><%= @recipe.instructions%></p>
<p><%= @recipe.vegan %></p>
<p><%= @recipe.cooking_time %> mins</p>
<p>Serves <%= @recipe.serves %></p>

<%= link_to "edit", edit_recipe_path %>
<%= link_to "add ingredient", new_recipe_recipe_ingredient_path(@recipe) %>
<%= link_to "Delete recipe",
      recipe_path(@recipe),
      method: :delete,
      data: { confirm: "Are you sure?" } %>

<% @recipe.recipe_ingredients.each do |ri| %>
  <p><%= ri.amount %> <%= ri.ingredient.name %></p>
  <%=  link_to "Remove",
          recipe_ingredient_path(ri),
          method: :delete,
          data: { confirm: "Are you sure?" } %>
<% end %>

<%= link_to "back", recipes_path %>
