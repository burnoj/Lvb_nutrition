<%= simple_form_for(@recipe) do |f| %>
  <%= f.input :name %>
  <%= f.input :description %>
  <%= f.input :instructions %>
  <%= f.input :vegan, as: :boolean, checked_value: true, unchecked_value: false%>
  <%= f.input :vegetarian, as: :boolean, checked_value: true, unchecked_value: false%>
  <%= f.input :dairy_free, as: :boolean, checked_value: true, unchecked_value: false%>
  <%= f.input :gluten_free, as: :boolean, checked_value: true, unchecked_value: false%>
  <%= f.input :cooking_time%>
  <%= f.input :serves, collection: 1..8 %>
  <%= f.input :image, as: :file %>
  <%= f.button :submit %>
<% end %>
